<h4>Enter your location to create a playlist</h4>

<%= link_to 'Sign in with Spotify', '/auth/spotify' %>

<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s6 offset-s3">
        <i class="material-icons prefix">location_on</i>
        <%= form_for @playlist do |f| %>
          <%= f.label :zipcode %>
          <%= f.number_field :zipcode %>
          <%= f.submit "Generate Playlist", class: "btn-large teal accent-3 black-text"%>
        <% end %>
      </div>
    </div>
  </form>
</div>
